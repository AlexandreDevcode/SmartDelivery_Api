// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Companies {
  id               String   @id @unique @default(uuid())
  name_company     String
  cnpj             String?
  payments_methods String[] 
  imgProfile       String?
  isSubiscriber    Boolean  @default(false)
  phone            String
  email            String
  password         String
  address          String

  created_at DateTime          @default(now())
  Menu       MenuOfCompanies[]
  Orders     Orders[]

  @@map("companies")
}

model MenuOfCompanies {
  id            String    @id @unique @default(uuid())
  title         String
  categoria     String?
  price         Int
  weight        String?
  amount        String?
  dataCompanies Companies @relation(fields: [companiesId], references: [id])
  companiesId   String
  created_at    DateTime  @default(now())

  @@map("menuofcompanies")
}

model Clients {
  id         String   @id @unique @default(uuid())
  name       String
  email      String
  password   String
  phone      Int
  created_at DateTime @default(now())
  Orders     Orders[]

  @@map("clients")
}

model Orders {
  id             String    @id @unique @default(uuid())
  amount         String
  payment_method String
  order          String[]
  created_at     DateTime  @default(now())
  dataCompanies  Companies @relation(fields: [companiesId], references: [id])
  companiesId    String
  client         Clients   @relation(fields: [clientsId], references: [id])
  clientsId      String

  @@map("orders")
}
